<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/strpg6"
    tools:context=".ChooseOne">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        app:layout_constraintBottom_toTopOf="@+id/linearlayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.922"
        app:srcCompat="@drawable/applogo7" />

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        app:flow_verticalBias="0.498"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.606">

        <Button
            android:id="@+id/OwnerBtn"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:background="@drawable/grbkg2"
            android:fontFamily="@font/bree_serif"
            android:gravity="center"
            android:text="Owner"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="#3E9886"
            app:backgroundTintMode="screen"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/CustomerBtn"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/grbkg1"
            android:fontFamily="@font/bree_serif"
            android:gravity="center"
            android:text="Customer"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTintMode="screen"
            app:cornerRadius="50dp" />

        <Button
            android:id="@+id/DeliveryBtn"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@drawable/grbkg3"
            android:fontFamily="@font/bree_serif"
            android:gravity="center"
            android:text="Delivery Person"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="#E91E63"
            app:backgroundTintMode="screen"
            app:cornerRadius="50dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>